<div class="col-md-4 offset-md-4">
  <%= simple_form_for @swim_race, html: { class: "form-new-race"}  do |f| %>
      <div class="col-xs-12 col-md-12">
        <% if current_page?(controller: 'swim_races', action: 'new')  %>
          <h2>Créer votre course d'eau libre</h2>
        <% else %>
          <h2>Editer votre course d'eau libre</h2>
        <% end %>
        <%= f.input :name, label: 'Nom de la course:'%>
        <%= f.input :city_name, label: "Ville:", input_html: { id: "new-race-city-input" } %>
        <%= f.input  :dates, as: :date, label: "Date de la course:" %>
        <%= f.input :description, label: 'Informations:'%>
        <%= f.input  :source_url, label: "Site-web de la course:" %>
        <%= f.input :photo, label: "Photo:", class: "btn btn-primary blue-nav" %>
        <%= f.input :photo_cache, as: :hidden  %>
        <%= f.submit "Ajouter des épreuves d'Eau Libre", class: "btn btn-primary blue-nav" %>
      </div>
  <% end %>
</div>
