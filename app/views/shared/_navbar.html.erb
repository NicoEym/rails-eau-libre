<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand white">
    <i class="fas fa-swimmer"></i>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right d-none d-md-block">
    <% if user_signed_in? %>
    <%= link_to raw('<i class="fas fa-search"></i> Chercher une course'), swim_races_path, class: "navbar-wagon-item navbar-wagon-link white" %>
    <%= link_to raw('<i class="fas fa-swimmer"></i> Créer une nouvelle course'), new_swim_race_path, class: "navbar-wagon-item navbar-wagon-link white" %>
    <%= link_to raw('<i class="fas fa-tasks"></i> Gérer mes courses'),  swim_races_my_races_path, class: "navbar-wagon-item navbar-wagon-link white" %>
    <%= link_to raw('<i class="fas fa-sign-out-alt"></i> Se déconnecter'),   destroy_user_session_path, :method => :delete, class: "navbar-wagon-item navbar-wagon-link white" %>
    <% else %>
      <%= link_to raw('<i class="fas fa-search"></i> Chercher une course'), swim_races_path, class: "navbar-wagon-item navbar-wagon-link white" %>
      <%= link_to raw('<i class="fas fa-swimmer"></i> Créer une nouvelle course'), new_swim_race_path, class: "navbar-wagon-item navbar-wagon-link white" %>
      <%= link_to "Se connecter", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link white" %>
      <%= link_to "S'inscrire", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link white" %>
    <% end %>
  </div>
  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item d-md-none">
    <div>
      <i id="burger-menu" class="fas fa-bars white" data-toggle="dropdown" role="button"></i>
      <div class="side-menu">
      <ul class="list-group list-group-flush">
        <% if user_signed_in? %>
          <%= link_to raw('<li class="list-group-item"><i class="fas fa-search"></i> Chercher une course</li>'), swim_races_path, class: "blue-font"%>
          <%= link_to raw('<li class="list-group-item"><i class="fas fa-swimmer"></i> Créer une nouvelle course</li>'), new_swim_race_path, class: "blue-font"%>
          <%= link_to raw('<li class="list-group-item"><i class="fas fa-tasks"></i> Gérer mes courses</li>'),  swim_races_my_races_path, class: "blue-font"%>
          <%= link_to raw('<li class="list-group-item"><i class="fas fa-sign-out-alt"></i> Se déconnecter</li>'), destroy_user_session_path, :method => :delete, class: "blue-font" %>
        <% else %>
          <%= link_to raw('<li class="list-group-item"><i class="fas fa-search"></i> Chercher une course</li>'), swim_races_path, class: "blue-font"%>
          <%= link_to raw('<li class="list-group-item"><i class="fas fa-swimmer"></i> Créer une nouvelle course</li>'), new_swim_race_path, class: "blue-font"%>
          <%= link_to raw('<li class="list-group-item">Se connecter</li> '), new_user_session_path, class: "blue-font" %>
          <%= link_to raw("<li class='list-group-item'>S'inscrire</li>"), new_user_registration_path, class: "blue-font" %>
        <% end  %>
      </ul>
      </div>
    </div>
  </div>
</div>

