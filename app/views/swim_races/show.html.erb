  <div class="container">
    <br>
    <br>
    <div class="race-events">
      <h1 class="text-center"><%= @swim_race.name %></h1>
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <div class="race-data space-between">
            <div class="race-infos">
              <h2>Informations:</h2>
              <p><strong>Ville: </strong><%= @swim_race.city_name %></p>
              <% m = @swim_race.dates.strftime("%m").to_i %>
              <% month = @months[m - 1] %>
              <p><strong>Date de la course: </strong> <%= @swim_race.dates.strftime("%d #{month} %Y") %></p>
              <p><strong>Description:</strong></p>
              <p class="text-justify"><%= simple_format(@swim_race.description) %></p>
              <button class="btn btn-primary blue-nav"><%= link_to raw('<i class="fas fa-swimmer"></i> Je participe'), @swim_race.source_url, class: "white-color-link"%></button>
            </div>
            <% if !current_user.nil? %>
              <% if @swim_race.user_id == current_user.id %>
                <div class="icons">
                <%= link_to raw('<i class="fas fa-edit"></i>'), edit_swim_race_path(@swim_race), class: "icon-color" %>
                <%= link_to raw('<i class="far fa-trash-alt"></i>'), swim_race_path(@swim_race),
                    method: :delete,
                    data: { confirm: "Are you sure?" }, class: "icon-color" %>
                </div>
              <% end %>
            <% end %>
          </div>
          <br>
          <div class="swim-events">
            <h2 class= text-center>Epreuves:</h2>
            <% events = @swim_race.swim_events %>
            <% events.each do |event| %>
              <div class="event-box" >
                <div class="space-between">
                  <p><strong>Distance: </strong><%= event.distance %> km</p>
                  <p><strong>Prix: </strong><%= event.price %> euros</p>
                </div>
                <p><strong>Informations de l'épreuve:</strong></p>
                <p class="text-justify"><%= simple_format(event.comment) %></p>
                <% if !current_user.nil? %>
                  <% if @swim_race.user_id == current_user.id %>
                    <%= link_to raw('<i class="far fa-trash-alt"></i> Supprimer'), swim_race_swim_event_path(@swim_race, event),
                                      method: :delete,
                                      data: { confirm: "Are you sure?" } %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
            <% if !current_user.nil? %>
              <% if @swim_race.user_id == current_user.id %>
                <button class="btn btn-secondary grey"><%= link_to raw('<i class="fas fa-plus-circle"></i> Ajouter des épreuves'),  new_swim_race_swim_event_path(@swim_race), class: "white-color-link" %>
                </button>
                <button class="btn btn-info"><%= link_to raw('<i class="fas fa-edit"></i> Modifier des épreuves'), edit_swim_race_swim_event_path(@swim_race), class: "white-color-link" %>
                </button>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <div class="race-data">
            <div class="race-media">
              <%= cl_image_tag @swim_race.photo, class: "img_my_race" %>
              <br>
              <div
                id="map"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
